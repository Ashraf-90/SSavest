@model IEnumerable<Application.DTOs.PixelsDTo>
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


<div style="width: 90%;margin:auto">
    <div class="pagetitle">
        <h1>Pixels List</h1>
        <div class="row mb-4">
            <div class="col-lg-8">
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Admin" asp-action="Index" style="color: #012970;">Dashboard</a>
                        </li>
                        <li class="breadcrumb-item active">
                            <a asp-controller="Pixels" asp-action="Index" style="color: #012970;">Pixels Lis</a>
                        </li>
                    </ol>
                </nav>
            </div>
            <div class="col-lg-4 text-end">
                <a class="btn btn-primary" asp-controller="Pixels" asp-action="Create">
                    <i class="bi bi-plus-square"></i> Create New
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <table class="table" style="font-size: 15px;text-align: center;">
            <thead>
                <tr>
                    <th style="background-color: #1d1919;color: white;vertical-align: middle;">App</th>
                    <th style="background-color: #1d1919;color: white;vertical-align: middle;">Code	</th>
                    <th style="background-color: #1d1919;color: white;vertical-align: middle;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Pixels in Model)
                {
                    <tr>
                        <td style="background-color: #e9ecef;vertical-align: middle;">@Pixels.PixelsApp</td>
                        <td style="background-color: #e9ecef;vertical-align: middle;">@Pixels.PixelsCode</td>
                        <td class="text-end" style="background-color: #e9ecef;vertical-align: middle;">
                            <a asp-action="Edit" asp-route-id="@Pixels.Id" class="btn btn-success btn-sm me-1">Edit</a>
                            <button type="button" class="btn btn-danger btn-sm btn-delete-Pixels" data-id="@Pixels.Id" data-name="@Pixels.PixelsApp">Delete </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<!-- Pixels Delete Modal -->
<div class="modal fade" id="deletePixelsModal" tabindex="-1" aria-labelledby="deletePixelsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deletePixelsModal">Confirm Delete Pixels</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img id="modalPixelsImage" src="" class="img-thumbnail mb-3" style="width:150px;" />
                <p id="modalPixelsText"></p>
            </div>
            <div class="modal-footer">
                <form id="deletePixelsForm" method="post">
                    <input type="hidden" id="deletePixelsId" name="id" />
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>


<script>
    document.addEventListener('DOMContentLoaded', function () {

        // Pixels delete
        document.querySelectorAll('.btn-delete-Pixels').forEach(button => {
            button.addEventListener('click', function () {
                const PixelsId = this.getAttribute('data-id');
                const PixelsName = this.getAttribute('data-name');

                document.getElementById('deletePixelsId').value = PixelsId;
                document.getElementById('modalPixelsText').innerText = `Do you want to delete this Pixels: ${PixelsName}?`;

                const deleteForm = document.getElementById('deletePixelsForm');
                deleteForm.setAttribute('action', `/Pixels/Delete/${PixelsId}`);

                const modal = new bootstrap.Modal(document.getElementById('deletePixelsModal'));
                modal.show();
            });
        });
    });
</script>
