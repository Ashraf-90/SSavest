<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>SaVest - Dashboard</title>
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="~/dashboard/css/sb-admin-2.css" rel="stylesheet" />
    <link href="~/dashboard/css/sb-admin-2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body id="page-top">
    <div id="wrapper">
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="index.html">
                <div class="sidebar-brand-text mx-3">SaVest</div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">





            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                Website Sections
            </div>

            <li class="nav-item active">
                <a class="nav-link" asp-controller="HeroBanner" asp-action="Edit" asp-route-id="1"><i class="bi bi-credit-card-2-front"></i><span>Hero Banner</span></a>
            </li>

            <li class="nav-item active">
                <a class="nav-link" href="index.html"><i class="bi bi-info-square-fill"></i><span>About SaVest</span></a>
            </li>

            <li class="nav-item active">
                <a class="nav-link" href="index.html"><i class="bi bi-diagram-3-fill"></i><span>Our Products</span></a>
            </li>

            <li class="nav-item active">
                <a class="nav-link" href="index.html"><i class="bi bi-info-circle-fill"></i><span>Who We Are</span></a>
            </li>

            <li class="nav-item active">
                <a class="nav-link" href="index.html"><i class="bi bi-stickies-fill"></i><span>Our Story</span></a>
            </li>
            <!--============================================================================================================================-->
            <hr class="sidebar-divider">
            <div class="sidebar-heading">Contact Info</div>
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#ContactInfo"
                   aria-expanded="true" aria-controls="collapsePages">
                    <i class="bi bi-person-lines-fill"></i>
                    <span>Contact Info</span>
                </a>
                <div id="ContactInfo" class="collapse" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Contact</h6>
                        <a class="collapse-item" href="login.html">Contact</a>
                        <div class="collapse-divider"></div>
                        <h6 class="collapse-header">Social Media</h6>
                        <a class="collapse-item" href="404.html">Social Media</a>
                    </div>
                </div>
            </li>
            <!--============================================================================================================================-->
            <hr class="sidebar-divider">
            <div class="sidebar-heading">SEO </div>
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#MetaPages"
                   aria-expanded="true" aria-controls="collapsePages">
                    <i class="bi bi-globe"></i>
                    <span>SEO Content</span>
                </a>
                <div id="MetaPages" class="collapse" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" asp-controller="KeyWords" asp-action="Index">KeyWords</a>
                        <a class="collapse-item" asp-controller="MetaPages" asp-action="Index">Meta Pages</a>
                        <a class="collapse-item" asp-controller="Pixels" asp-action="Index">Pixels</a>
                    </div>
                </div>
            </li>
        </ul>

        <!--============================================================================================================================-->
        <!--==============================================  Content  =================================================-->
        <!--============================================================================================================================-->
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow" style="background-color: #212529 !important;">
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3" style="background: white;">
                        <i class="fa fa-bars"></i>
                    </button>
                </nav>
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>


    <script src="~/dashboard/vendor/jquery/jquery.min.js"></script>
    <script src="~/dashboard/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/dashboard/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/dashboard/js/sb-admin-2.min.js"></script>
</body>
</html>