@model IEnumerable<Application.DTOs.KeyWordsDTo>
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


<div style="width: 90%;margin:auto">
    <div class="pagetitle">
        <h1>KeyWords List</h1>
        <div class="row mb-4">
            <div class="col-lg-8">
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Admin" asp-action="Index" style="color: #012970;">Dashboard</a>
                        </li>
                        <li class="breadcrumb-item active">
                            <a asp-controller="KeyWords" asp-action="Index" style="color: #012970;">KeyWords Lis</a>
                        </li>
                    </ol>
                </nav>
            </div>
            <div class="col-lg-4 text-end">
                <a class="btn btn-primary" asp-controller="KeyWords" asp-action="Create">
                    <i class="bi bi-plus-square"></i> Create New
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <table class="table" style="font-size: 15px;text-align: center;">
            <thead>
                <tr>
                    <th style="background-color: #1d1919;color: white;vertical-align: middle;">En KeyWords</th>
                   @*  <th style="background-color: #1d1919;color: white;vertical-align: middle;">Ar KeyWords	</th> *@
                    <th style="background-color: #1d1919;color: white;vertical-align: middle;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var KeyWords in Model)
                {
                    <tr>
                        <td style="background-color: #e9ecef;vertical-align: middle;">@KeyWords.EnKeyword</td>
                        @* <td style="background-color: #e9ecef;vertical-align: middle;">@KeyWords.ArKeyword</td> *@
                        <td class="text-end" style="background-color: #e9ecef;vertical-align: middle;">
                            <a asp-action="Edit" asp-route-id="@KeyWords.Id" class="btn btn-success btn-sm me-1">Edit</a>
                            <button type="button" class="btn btn-danger btn-sm btn-delete-KeyWords" data-id="@KeyWords.Id" data-name="@KeyWords.EnKeyword">Delete </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<!-- KeyWords Delete Modal -->
<div class="modal fade" id="deleteKeyWordsModal" tabindex="-1" aria-labelledby="deleteKeyWordsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteKeyWordsModal">Confirm Delete KeyWords</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img id="modalKeyWordsImage" src="" class="img-thumbnail mb-3" style="width:150px;" />
                <p id="modalKeyWordsText"></p>
            </div>
            <div class="modal-footer">
                <form id="deleteKeyWordsForm" method="post">
                    <input type="hidden" id="deleteKeyWordsId" name="id" />
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>


<script>
    document.addEventListener('DOMContentLoaded', function () {

        // KeyWords delete
        document.querySelectorAll('.btn-delete-KeyWords').forEach(button => {
            button.addEventListener('click', function () {
                const KeyWordsId = this.getAttribute('data-id');
                const KeyWordsName = this.getAttribute('data-name');

                document.getElementById('deleteKeyWordsId').value = KeyWordsId;
                document.getElementById('modalKeyWordsText').innerText = `Do you want to delete this KeyWords: ${KeyWordsName}?`;

                const deleteForm = document.getElementById('deleteKeyWordsForm');
                deleteForm.setAttribute('action', `/KeyWords/Delete/${KeyWordsId}`);

                const modal = new bootstrap.Modal(document.getElementById('deleteKeyWordsModal'));
                modal.show();
            });
        });
    });
</script>
